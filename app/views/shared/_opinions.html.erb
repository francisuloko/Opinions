<section class='p-3 mx-3'>
    <div class="card-body m-4 border border-1 rounded bg-op">
        <%= form_for(@opinion, url: opinion_path) do |f| %>
            <%= f.label 'What\'s happening?', class: 'my-2' %>
            <%= f.text_field :text, autofocus: true, class: "form-control mb-3", placeholder: "Enter a message..." %>
        <% end %>
    </div>
    <div class="card-body m-4 border border-1 rounded bg-op">
        <h5 class="card-title border-bottom py-2">Opinions</h5>
        <% @opinions.each do |opinion| %>
            <div class=''>
              <div class="d-flex flex-row mt-3">
                  <span><%= photo(opinion.author, 'rounded')%></span>
                  <div class="w-100 mx-3">
                      <div class='d-flex justify-content-between align-items-center'>
                        <span><%=link_to "#{opinion.author.fullname}", profile_path(opinion.author.username) %></span>
                        <span><%= time_ago_in_words(opinion.created_at) + ' ago' %></span>
                      </div>
                      <div class="d-flex justify-content-between align-items-center my-2">
                          <div><%= opinion.text %></div> 
                          <div class='d-flex my'>
                            <span class='mx-2'><%= like(opinion) %></span>
                            <span><%= opinion.likes.count %></span>
                          </div>
                      </div>
                  </div>
              </div>
        <% end %>
    </div>
</section>
