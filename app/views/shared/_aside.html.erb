<aside class="d-flex flex-column flex-shrink-0 p-0 text-white bg-dark blue" style='height: 100vh'>
    <a href="/" class="d-flex align-items-center mb-0 mb-md-0 me-md-auto text-white text-decoration-none p-2">
      <%= photo(current_user, 'rounded small-photo') %>
      <span class="p-2 text-secondary" style='font-size: 15px'><%= current_user.fullname %></span>
    </a>
     <article class='connections d-flex justify-content-around my-2 px-2' style="font-size: 12px">
        <div class='text-center'>
          <span><%= current_user.following.count %></span><br/>
          <span>Following</span>
        </div>
        <div class='text-center'>
          <span><%= current_user.followers.count %><span><br/>
          <span>Followers</span>
        </div>
      </article>
      <hr>
    <ul class="nav nav-pills flex-column mb-auto mx-0 px-0">
      <li class='my-2'>
        <i class="fas fa-home mx-3"></i>
        <%= link_to "Home", root_path, style: 'text-decoration: none; color: #fff', class: 'active' %>
      </li>
      <li class='my-2'>
        <i class="fas fa-user mx-3"></i>
        <%= link_to "Profile", profile_path(current_user.username), style: 'text-decoration: none; color: #fff' %>
      </li>
      <li class='my-2'>
        <i class="fas fa-sign-out-alt mx-3"></i>
        <%= link_to "logout", logout_path, method: :delete, style: 'text-decoration: none; color: #fff' %>
      </li>
    </ul>
  </aside>
