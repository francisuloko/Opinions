<div class="text-center d-flex justify-content-center p-5 align-items-center">
    <section class="form-signin">
        <i class="fab fa-twitter fs-1 m-2"></i>
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        <%= form_for(:session, url: login_path) do |f| %>

            <div class="form-floating">
              <%= f.label :username %>
              <%= f.text_field :username, autofocus: true, placeholder: "Enter a username", class:"form-control", id:"floatingInput"  %>
            </div>
            <div class="checkbox m-3">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>
            <%= f.submit 'Login', class: "w-100 btn btn-lg btn-primary mb-3" %> <br />
            <%= link_to 'Signup', new_user_path, class: 'p-3 m-3' %>
            <p class="mt-5 mb-3 text-muted">© 2017–2021</p>
        <% end %>
    </section>
</div>
